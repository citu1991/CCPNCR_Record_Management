    <!-- Vendor CSS Files -->

    <script src="~/Scripts/jquery-3.4.1.js" crossorigin="anonymous"></script>
    <link href="~/DesignA/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/DesignA/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/DesignA/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/DesignA/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/DesignA/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
