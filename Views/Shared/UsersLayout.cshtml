    <script>
        $(document).ready(function () {
            function disableBack() { window.history.forward() }

            window.onload = disableBack();
            window.onpageshow = function (evt) { if (evt.persisted) disableBack() }
        });
    </script>
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="@Url.Action("User_RkDashBoard","User_Rk")">Chief Coordinator Planner(NCR) Record Management System</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo me-auto"><img src="DesignA/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="@Url.Action("User_RkDashBoard","User_Rk")">Dashboard</a></li>
                    <li><a class="nav-link scrollto " href="@Url.Action("FilePendingforApproval","User_Rk")">Notifications (@ViewBag.NotificationCount)</a></li>
                    <li class="dropdown">
                        <a href="#"><span>Masters</span> <i class="bi bi-chevron-down"></i></a>
                        <ul> 
                            @if(Session["UserRoleType"].ToString()!="User")
                            { 
                            <li><a href="@Url.Action("InsertFileRecord","FileMasterRecord")">Add File Record</a></li>
                            <li><a href="@Url.Action("Load_In_out","FileMasterRecord")">File In-Out Status</a></li>
                            <li><a href="@Url.Action("FileSentforApproval","FileMasterRecord")">File Sent for Approval</a></li>
                            }
                            <li class="dropdown">                                
                                <a href="#"><span>Reports Master</span> <i class="bi bi-chevron-right"></i></a>
                                <ul>
                                    <li><a href="@Url.Action("GetAllFileRecord","FileMasterRecord")">All File Record</a></li>
                                </ul>
                            </li>
                        </ul>

                    </li>
                    <li class="getstarted dropdown">
                        <a href="#"><span>Welcome @Session["UserFullName"] (@Session["UserRoleType"])</span><i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="@Url.Action("GetProfile","Admin")">Profile</a></li>
                            <li><a href="@Url.Action("UpdatePassword","Admin")">Change Password</a></li>
                            <li><a href="@Url.Action("Logout","Admin")">Logout</a></li>
                        </ul>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->





    <main id="main">
        <div class="container" style="padding-top:10px">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </main>


    <!-- ======= Footer ======= -->
    <footer id="footer" style="z-index:4">
        <div class="footer-bottom">
            <div>
                Design and Developed By <strong><span>Dinesh Kumar (Programmer) O/o CCP(NCR)</span></strong>
                <br />
                Department Web Link <a href="https://tcpharyana.gov.in/" target="_blank">TCP Haryana</a>
            </div>           
        </div>
    </footer><!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/DesignA/vendor/aos/aos.js"></script>
    <script src="~/DesignA/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/DesignA/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/DesignA/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/DesignA/vendor/php-email-form/validate.js"></script>
    <script src="~/DesignA/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/DesignA/vendor/waypoints/noframework.waypoints.js"></script>

    <!-- Template Main JS File -->
    <script src="~/DesignA/js/main.js"></script>

</body>

</html>