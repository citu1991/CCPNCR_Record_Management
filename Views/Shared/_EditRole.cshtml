@model CCPNCR_Record_Management.Models.RoleUserVM
<div class="row" id="myformdata">
    @if (Model != null)
    {

        <div class="col-lg-12">
            <div class="form-group col-md-6">
                @Html.HiddenFor(model => Model.UserList[0].UserId, new { @class = "UserId" })
                <b> User Name :</b> <label>  @Model.UserList[0].UserName</label>
            </div>
        </div>       
        <div class="col-lg-12">
            <div class="form-group col-md-6">
                <b>Select Role : </b><br />
            </div>
                <div class="form-group col-md-6">
                    @Html.DropDownListFor(model => model.RoleId, new SelectList(Model.RoleList, "RoleId", "RoleName", Model.UserList[0].RoleId), "--Select Role--", new { @class = "form-control Role_Id" })
                </div>
            </div>

            }
        </div>
